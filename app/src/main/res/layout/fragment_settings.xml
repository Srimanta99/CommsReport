<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>

                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"

                                android:inputType="text">

                            </EditText>



                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"

                            android:layout_marginBottom="@dimen/_10sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"

                                android:inputType="textEmailAddress"

                                >

                            </EditText>


                        <TextView
                            android:id="@+id/tv_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textColor="#1E3F6C"
                            android:textSize="@dimen/_18sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textStyle="bold">

                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#32000000"

                            >

                        </View>

                        <TextView
                            android:id="@+id/tv_currentpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current password"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_currentpassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"

                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:inputType="textPassword"

                                >

                            </EditText>


                        <TextView
                            android:id="@+id/tv_newpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New password"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"

                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_newpassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"

                                android:inputType="textPassword"

                                >

                            </EditText>

                        <TextView
                            android:id="@+id/tv_confirmpass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Conform new password"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"

                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_conpass"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:inputType="textPassword"

                                >

                            </EditText>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:layout_marginBottom="@dimen/_20sdp">


                                <TextView
                                    android:id="@+id/submit_tvid"
                                    android:layout_width="@dimen/_175sdp"
                                    android:layout_height="@dimen/_44sdp"
                                    android:text="SUBMIT"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                          android:textSize="@dimen/_13sdp"
                                    android:background="@drawable/gradient_login_button"
                                    >

                                </TextView>




                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


</LinearLayout>