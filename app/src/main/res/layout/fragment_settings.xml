<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/top_two_rounded_corner_white"
    android:orientation="vertical">

            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_companyname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company name"
                            android:textSize="@dimen/_12sdp"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_4sdp"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>

                        <EditText
                            android:id="@+id/et_companyname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/asscolor_round"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textStyle="normal"
                            android:textSize="@dimen/_12sdp"
                            android:paddingLeft="@dimen/_9sdp"
                            android:paddingRight="@dimen/_9sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:inputType="text">

                        </EditText>
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="@dimen/_12sdp"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_4sdp"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>

                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"

                                android:inputType="text">

                            </EditText>



                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_10sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:enabled="false"
                                android:inputType="textEmailAddress"

                                >

                            </EditText>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_15sdp">
                            <TextView
                                android:id="@+id/tv_update"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:drawableLeft="@drawable/update_icon"
                                android:padding="@dimen/_10sdp"
                                android:text="UPDATE"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp"
                                android:background="@drawable/gradient_login_button"
                                ></TextView>
                        </RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/divider">
</TextView>
                        <TextView
                            android:id="@+id/tv_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textColor="#1E3F6C"
                            android:gravity="center"
                            android:textSize="@dimen/_18sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="note: please change your password from below"></TextView>

                        <TextView
                            android:id="@+id/tv_currentpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current password"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_currentpassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"

                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:inputType="textPassword"

                                >

                            </EditText>


                        <TextView
                            android:id="@+id/tv_newpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New password"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"

                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_newpassword"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"

                                android:inputType="textPassword"

                                >

                            </EditText>

                        <TextView
                            android:id="@+id/tv_confirmpass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Conform new password"
                            android:textColor="@color/text_color_blue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"

                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>


                            <EditText
                                android:id="@+id/et_conpass"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/asscolor_round"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:textStyle="normal"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:inputType="textPassword"
                                android:enabled="false"

                                >

                            </EditText>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_15sdp">
                            <TextView
                                android:id="@+id/submit_tvid"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:drawableLeft="@drawable/submit"
                                android:padding="@dimen/_10sdp"
                                android:text="SUBMIT"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp"
                                android:background="@drawable/gradient_login_button"
                                ></TextView>
                        </RelativeLayout>



                    </LinearLayout>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="note:(*) fields are all mandatory fields"></TextView>
                </LinearLayout>
            </ScrollView>


</LinearLayout>