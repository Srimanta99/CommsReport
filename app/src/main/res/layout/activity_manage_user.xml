<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AddSite.AddSite"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlheader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/menu"/>
            <TextView
                android:id="@+id/tv_header_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MANAGE USER"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/more"
                ></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitebg"
            android:orientation="vertical">

            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/asscolor_round"
                            android:orientation="vertical"
                            >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_10sdp"

                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/grey_bg" >

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:src="@drawable/camera"
                                        android:padding="@dimen/_8sdp">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="CILCK HERE\n FOR ADD IMAGE"
                                        android:textSize="8sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:layout_marginBottom="@dimen/_8sdp">

                                    </TextView>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_15sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Priyam Ghosh"
                                    android:textSize="18sp"
                                    android:textColor="#1E3F6C"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    >

                                </TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_9sdp"
                                    android:layout_marginBottom="@dimen/_2sdp">



                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/ic_baseline_email_24"
                                        >

                                    </ImageView>
                                    <TextView
                                        android:id="@+id/email_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="chowdhury.codopoliz@gmail.com"
                                        android:textColor="#1E3F6C"
                                        android:textSize="10sp"
                                        android:gravity="top|left"
                                        >

                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/_2sdp"
                                    >


                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:src="@drawable/ic_baseline_phone_24"
                                        >

                                    </ImageView>
                                    <TextView
                                        android:id="@+id/teacher_mobile"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="8777069940"
                                        android:textSize="10sp"
                                        android:textColor="#1E3F6C"
                                        >

                                    </TextView>
                                </LinearLayout>


                            </LinearLayout>
        </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:background="#32000000"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                >

                            </View>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_4sdp"
                                android:paddingTop="@dimen/_2sdp"
                                >

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/ic_baseline_add_location_24"
                                    android:layout_marginLeft="@dimen/_12sdp"
                               >

                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_15sdp"
                                    android:text="nabapally barasat kolkata 700126"
                                    android:textColor="#1E3F6C"
                                    android:textSize="10sp"
                                    >

                                </TextView>                            </LinearLayout>
                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:layout_marginBottom="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginRight="@dimen/_50sdp"
                                android:layout_marginLeft="@dimen/_50sdp"
                                android:background="@drawable/gradient_login_button"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ADD USER"
                                    android:textColor="#fff"
                                    android:layout_gravity="center"
                                    android:gravity="center">

                                </TextView>



                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        >
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/edit">

                        </ImageView>
                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>