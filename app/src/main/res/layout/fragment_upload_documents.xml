        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitebg"
            android:orientation="vertical">

            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_email_uploaddoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Document Name"
                            android:textColor="#1E3F6C"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/asscolor_round"
                            android:layout_marginBottom="@dimen/_10sdp">
                            <EditText
                                android:id="@+id/et_name_uploaddoc"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@android:color/transparent"
                                android:textStyle="normal"
                                android:paddingLeft="@dimen/_9sdp"
                                android:paddingRight="@dimen/_9sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:textSize="@dimen/_12sdp"
                                android:inputType="textEmailAddress"

                                >

                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginRight="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/tv_start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Start date"
                                    android:textColor="#1E3F6C"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginBottom="@dimen/_10sdp">

                                </TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/asscolor_round"
                                    >
                                    <!--  <EditText
                                          android:layout_width="match_parent"
                                          android:layout_height="@dimen/_40sdp"
                                          android:background="@android:color/transparent"
                                          android:textStyle="normal"
                                          android:textSize="15sp"
                                          android:paddingLeft="@dimen/_9sdp"
                                          android:paddingRight="@dimen/_9sdp"
                                          android:paddingTop="@dimen/_10sdp"
                                          android:paddingBottom="@dimen/_10sdp"

                                          android:inputType="textEmailAddress"

                                          >

                                      </EditText>-->

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="1">
                                        <TextView
                                            android:id="@+id/tv_startdate"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:background="@android:color/transparent"
                                            android:textStyle="normal"
                                            android:textSize="@dimen/_12sdp"
                                            android:paddingLeft="@dimen/_9sdp"
                                            android:paddingRight="@dimen/_9sdp"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_10sdp"
                                            android:inputType="text">

                                        </TextView>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/ll_cal1"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="0.3">
                                        <ImageView

                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:src="@drawable/calender"
                                            android:layout_gravity="center"

                                            >

                                        </ImageView>
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_10sdp">
                                <TextView
                                    android:id="@+id/tv_expiry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Expiry date"
                                    android:textColor="#1E3F6C"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="@dimen/_10sdp">

                                </TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/asscolor_round"
                                    >
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="1">
                                        <TextView
                                            android:id="@+id/tv_expirydate"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:background="@android:color/transparent"
                                            android:textStyle="normal"
                                            android:textSize="@dimen/_12sdp"
                                            android:paddingLeft="@dimen/_9sdp"
                                            android:paddingRight="@dimen/_9sdp"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_10sdp"

                                            android:inputType="text"

                                            >

                                        </TextView>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="0.3">
                                        <ImageView
                                            android:id="@+id/ll_cal2"
                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:src="@drawable/calender"
                                            android:layout_gravity="center"

                                            >

                                        </ImageView>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_22sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                           >



                            <CheckBox
                                android:id="@+id/chk_notify"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"

                                android:textColor="#1E3F6C"
                                android:textSize="@dimen/_12sdp"
                                android:layout_centerInParent="true"
                                android:button="@drawable/customcheckboxselector"
                                android:text="Notify me prior 7 days"
                                android:paddingLeft="@dimen/_13sdp">

                            </CheckBox>




                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_44sdp"
                            android:layout_marginTop="@dimen/_22sdp">

                            <TextView
                                android:id="@+id/tv_upload_Doc"
                                android:layout_width="@dimen/_174sdp"
                                android:layout_height="@dimen/_44sdp"
                                android:text="UPLOAD DOCUMENTS"
                                android:textColor="#fff"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_12sdp"
                                android:background="@drawable/bluecapsulshapebutton"
                                android:layout_centerHorizontal="true"

                                android:gravity="center">

                            </TextView>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_marginBottom="@dimen/_20sdp">

                            <LinearLayout
                                android:id="@+id/ll_attachment"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_margin="@dimen/_12sdp"
                                android:visibility="gone">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/attachment">

                                </ImageView>
                                <TextView
                                    android:id="@+id/tv_attachment1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/_12sdp"
                                    android:text=" Attachment 1"
                                    android:textSize="@dimen/_13sdp"
                                    android:textColor="@color/black"
                                    android:gravity="center_vertical"
                                    ></TextView>

                            </LinearLayout>


                                <TextView

                                    android:id="@+id/tv_submit_upload_doc"
                                    android:layout_width="@dimen/_175sdp"
                                    android:layout_height="@dimen/_44sdp"
                                    android:text="SUBMIT"
                                    android:textColor="#fff"
                                    android:layout_gravity="center"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:background="@drawable/gradient_login_button"
                                    android:gravity="center">

                                </TextView>




                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>