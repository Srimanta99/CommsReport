        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/whitebg"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_email_uploaddoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_4sdp"
                            android:text="Document Name"
                            android:textColor="#1E3F6C"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/et_name_uploaddoc"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/asscolor_round"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/_9sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingRight="@dimen/_9sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal"

                            >

                        </EditText>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Note : Please provide a relevant document name, It will help you to searching the document"
                            android:textColor="#1E3F6C"></TextView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Start date"
                                    android:textColor="#1E3F6C"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold">

                                </TextView>

                                <LinearLayout
                                    android:id="@+id/ll_cal1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/asscolor_round">
                                    <!--  <EditText
                                          android:layout_width="match_parent"
                                          android:layout_height="@dimen/_40sdp"
                                          android:background="@android:color/transparent"
                                          android:textStyle="normal"
                                          android:textSize="15sp"
                                          android:paddingLeft="@dimen/_9sdp"
                                          android:paddingRight="@dimen/_9sdp"
                                          android:paddingTop="@dimen/_10sdp"
                                          android:paddingBottom="@dimen/_10sdp"

                                          android:inputType="textEmailAddress"

                                          >

                                      </EditText>-->

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tv_startdate"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:background="@android:color/transparent"
                                            android:inputType="text"
                                            android:paddingLeft="@dimen/_9sdp"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingRight="@dimen/_9sdp"
                                            android:paddingBottom="@dimen/_10sdp"
                                            android:textSize="@dimen/_12sdp"
                                            android:textStyle="normal">

                                        </TextView>

                                    </LinearLayout>

                                    <LinearLayout

                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="0.3">

                                        <ImageView

                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/calender"

                                            >

                                        </ImageView>
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_expiry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:text="Expiry date"
                                    android:textColor="#1E3F6C"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold">

                                </TextView>

                                <LinearLayout
                                    android:id="@+id/ll_cal2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/asscolor_round">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tv_expirydate"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:background="@android:color/transparent"
                                            android:inputType="text"
                                            android:paddingLeft="@dimen/_9sdp"
                                            android:paddingTop="@dimen/_10sdp"
                                            android:paddingRight="@dimen/_9sdp"
                                            android:paddingBottom="@dimen/_10sdp"
                                            android:textSize="@dimen/_12sdp"

                                            android:textStyle="normal"

                                            >

                                        </TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_weight="0.3">

                                        <ImageView

                                            android:layout_width="@dimen/_15sdp"
                                            android:layout_height="@dimen/_15sdp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/calender"

                                            >

                                        </ImageView>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <CheckBox
                            android:id="@+id/chk_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:button="@drawable/customcheckboxselector"
                            android:text="  Please notify me 7 days prior expriation date"
                            android:textColor="#1E3F6C"
                            android:textSize="@dimen/_12sdp">

                        </CheckBox>


                        <TextView
                            android:id="@+id/tv_uploaddoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:drawableRight="@drawable/star"
                            android:drawablePadding="@dimen/_4sdp"
                            android:paddingLeft="@dimen/_4sdp"
                            android:text="Upload document "
                            android:textColor="#1E3F6C"
                            android:textSize="@dimen/_12sdp">

                        </TextView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/asscolor_round">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7">

                                <TextView
                                    android:id="@+id/tv_upload"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center|left"
                                    android:hint="Upload"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:paddingLeft="@dimen/_9sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="normal"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@drawable/bluecapsulshapebutton">

                                <TextView
                                    android:id="@+id/tv_upload_Doc"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="BROWSE"
                                    android:textColor="#fff"
                                    android:textSize="@dimen/_12sdp">

                                </TextView>

                            </LinearLayout>

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_marginBottom="@dimen/_20sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_145sdp">
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/ll_attachment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:orientation="vertical"
                                    >
                                    <!--<ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:background="@drawable/attachment">

                                    </ImageView>
                                    <TextView
                                        android:id="@+id/tv_attachment1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="@dimen/_12sdp"
                                        android:text=" Attachment 1"
                                        android:textSize="@dimen/_13sdp"
                                        android:textColor="@color/black"
                                        android:gravity="center_vertical"
                                        ></TextView>
    -->
                                </LinearLayout>
                            </ScrollView>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/_52sdp"
                                android:gravity="center"
                                android:text="Note: [*] feilds are all mandatory fields"></TextView>

                            <TextView

                                android:id="@+id/tv_submit_upload_doc"
                                android:layout_width="@dimen/_175sdp"
                                android:layout_height="@dimen/_44sdp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/gradient_login_button"
                                android:gravity="center"
                                android:text="SUBMIT"
                                android:textColor="#fff"
                                android:textSize="@dimen/_12sdp">

                            </TextView>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>