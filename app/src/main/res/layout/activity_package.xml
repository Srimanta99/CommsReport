<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">
    <RelativeLayout
        android:id="@+id/rlheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/left_back"/>
        <TextView
            android:id="@+id/tv_header_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Package "
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlheader"
    android:background="@drawable/top_two_rounded_corner_white">
    <TextView
        android:id="@+id/tv_currentplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/_17sdp"
        android:layout_margin="@dimen/_10sdp"
        android:text="Confirm Your Order"></TextView>
    <RelativeLayout
        android:id="@+id/rl_unlimited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selected"
        android:layout_below="@+id/tv_currentplan"
        android:padding="@dimen/_21sdp">
        <TextView
            android:id="@+id/tv_unlimited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/white"
            android:text="Unlimited"></TextView>
        <ImageView
            android:id="@+id/chk_unlimited_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/thik_with_circle"></ImageView>
        <TextView
            android:id="@+id/tv_unlimited_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlimited"
            android:text=" Unlimited users "
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"
            android:background="@drawable/rectangular_rounded_shape_selecteduser_site"></TextView>
        <TextView
            android:id="@+id/tv_unlimited_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlimited"
            android:text=" Unlimited Sites "
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_11sdp"
            android:layout_toRightOf="@+id/tv_unlimited_user"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="@color/white"
            android:background="@drawable/rectangular_rounded_shape_selecteduser_site"></TextView>

        <TextView
            android:id="@+id/tvtengbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlimited_site"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="10 GBP/"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_7sdp"
            android:textSize="@dimen/_17sdp"></TextView>
        <TextView
            android:id="@+id/tvtengbppermonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlimited_site"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_toRightOf="@+id/tvtengbp"
            android:text=" per month"
            android:textColor="@color/white"

            android:textSize="@dimen/_12sdp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_below="@+id/tvtengbp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rectangular_rounded_shape_plan_fault_doc">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_7sdp"
                android:background="@drawable/white_tick"></ImageView>
            <TextView
                android:id="@+id/tv_unlimited_fault"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_7sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:text="Unlimited Faults"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_7sdp"
                android:background="@drawable/horizentaldivider"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_tick"></ImageView>
            <TextView
                android:id="@+id/tv_unlimited_documents"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_7sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/white"
                android:text="Unlimited Documents"></TextView>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_subcription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_19sdp"
        android:layout_marginLeft="@dimen/_19sdp"
        android:layout_below="@+id/rl_unlimited"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:background="@drawable/rectangular_top_two_rounded_shape_light_grey"
            >
            <TextView
                android:id="@+id/tv_subcriptiondate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
               android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:text="Subcription date"></TextView>
            <TextView
                android:id="@+id/tv_subcriptiondate_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12 th April, 20221"
                android:gravity="center"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:background="@drawable/rectangular_shape_rounded_corner_white"
                >

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:background="#e4e4e4">
            <TextView
                android:id="@+id/tv_totalamount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Total Amount"></TextView>
            <TextView
                android:id="@+id/tv_total_amount_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7 GBP"
                android:gravity="center"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_75sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:background="@drawable/rectangular_shape_rounded_corner_white"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:background="@drawable/rectangular_bottom_two_rounded_shape_light_grey">
            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_7sdp"
                android:text=""></TextView>

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/chkterm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/customcheckboxselectorpayment"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="  Accept our"
        android:textSize="@dimen/_11sdp"
        android:layout_below="@+id/ll_subcription"></CheckBox>
    <TextView
        android:id="@+id/termcondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="term &amp; condition"
        android:layout_toRightOf="@+id/chkterm"
        android:layout_marginLeft="@dimen/_7sdp"
        android:textColor="@color/text_color_blue"
        android:textSize="@dimen/_11sdp"
        android:layout_below="@+id/ll_subcription"></TextView>
</RelativeLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/gradient_login_button"
        android:gravity="center"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_12sdp"

        android:textStyle="bold">

    </TextView>

</RelativeLayout>