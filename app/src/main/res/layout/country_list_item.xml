<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_country"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_5sdp"></ImageView>
    <TextView
        android:id="@+id/tv_countryname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="India"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_toRightOf="@+id/img_flag"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/dialog_grey_color"
        android:layout_below="@id/img_flag"></TextView>
</RelativeLayout>