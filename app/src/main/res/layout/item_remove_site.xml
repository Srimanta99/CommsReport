<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_17sdp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">


                <LinearLayout
                    android:id="@+id/ll_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/grey_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/img_company"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/no_image"
                            android:visibility="gone">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_no_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="No Image"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="visible">

                        </TextView>
                        <ImageView
                            android:id="@+id/img_flag_status"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/active"
                            android:layout_margin="@dimen/_5sdp"></ImageView>
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"></TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/asscolor_round"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">
                        <TextView
                            android:id="@+id/tvusename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="United kindom"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:padding="@dimen/_3sdp"></TextView>
                        <CheckBox
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:button="@drawable/customcheckboxselectoruserremove"
                            android:layout_alignParentRight="true"></CheckBox>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">
                        <TextView
                            android:id="@+id/tv_usercount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/chk_unlimited_select"
                            android:text=" User 0 "
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:padding="@dimen/_6sdp"

                            android:textSize="@dimen/_11sdp"
                            android:background="@drawable/rectangular_shape_white_round_corner_lightgrey_broder"></TextView>
                        <TextView
                            android:id="@+id/tv_sitecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_unlimited"
                            android:text=" Fault 0 "
                            android:padding="@dimen/_6sdp"
                            android:textSize="@dimen/_11sdp"

                            android:layout_marginLeft="@dimen/_8sdp"
                            android:background="@drawable/rectangular_shape_white_round_corner_lightgrey_broder"></TextView>

                    </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/_4sdp"
                       android:layout_marginTop="@dimen/_7sdp">
                       <TextView
                           android:id="@+id/tv_created"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:text="Created at :"></TextView>
                       <TextView
                           android:id="@+id/tv_created_date"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/_12sdp"
                           android:text="10 oct 2020"></TextView>
                   </LinearLayout>



                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_7sdp"
                android:src="@drawable/edit">

            </ImageView>
        </LinearLayout>-->

    </RelativeLayout>
    <!--<ImageView
        android:id="@+id/img_edit"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_alignParentRight="true"
        android:src="@drawable/edit">

    </ImageView>-->



</LinearLayout>