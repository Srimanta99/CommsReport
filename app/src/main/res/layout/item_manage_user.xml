<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/asscolor_round"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="0.4"
                        android:orientation="vertical"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grey_bg"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_8sdp"
                                android:scaleType="fitXY"
                                android:background="@drawable/no_image">

                            </ImageView>

                           <!-- <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:gravity="center"
                                android:text="CILCK HERE\n FOR ADD IMAGE"
                                android:textSize="8sp">

                            </TextView>-->
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Priyam Ghosh "
                            android:textColor="#1E3F6C"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_baseline_email_24">

                            </ImageView>

                            <TextView
                                android:id="@+id/email_id"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="top|left"
                                android:text="chowdhury.codopoliz@gmail.com"
                                android:textColor="#1E3F6C"
                                android:textSize="@dimen/_10sdp">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_2sdp">


                            <ImageView
                                android:id="@+id/img_phone"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/ic_baseline_phone_24">

                            </ImageView>

                            <TextView
                                android:id="@+id/teacher_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="8777069940"
                                android:textColor="#1E3F6C"
                                android:textSize="@dimen/_10sdp">

                            </TextView>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="#32000000">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_4sdp">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:src="@drawable/ic_baseline_add_location_24">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:text="nabapally barasat kolkata 700126"
                        android:textColor="#1E3F6C"
                        android:textSize="@dimen/_10sdp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/edit">

            </ImageView>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>