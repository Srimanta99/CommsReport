<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_15sdp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/asscolor_round"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="0.5"
                        android:orientation="vertical"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grey_bg"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"

                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                             android:padding="@dimen/_2sdp"
                                android:scaleType="fitXY"
                                android:background="@drawable/no_image">

                            </ImageView>
                            <ImageView
                                android:id="@+id/img_status"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/active"
                                android:layout_margin="@dimen/_5sdp"></ImageView>
                           <!-- <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:gravity="center"
                                android:text="CILCK HERE\n FOR ADD IMAGE"
                                android:textSize="8sp">

                            </TextView>-->
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Priyam Ghosh "
                            android:textColor="#1E3F6C"
                            android:paddingLeft="@dimen/_1sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:src="@drawable/mail">

                            </ImageView>

                            <TextView
                                android:id="@+id/email_id"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="top|left"
                                android:text="chowdhury.codopoliz@gmail.com"
                                android:textColor="#1E3F6C"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_2sdp">


                            <ImageView
                                android:id="@+id/img_phone"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:src="@drawable/phone">

                            </ImageView>

                            <TextView
                                android:id="@+id/teacher_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="8777069940"
                                android:textColor="#1E3F6C"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp">

                            </TextView>
                        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_1sdp">
    <TextView
        android:id="@+id/tv_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_1sdp"
        android:textSize="@dimen/_11sdp"
        android:text="Site"
        android:textColor="@color/textColor">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_3sdp"
        android:textSize="@dimen/_11sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="@color/black"
        android:text="|">

    </TextView>
    <TextView
        android:id="@+id/tv_site_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_3sdp"
        android:textSize="@dimen/_10sdp"
        android:text="Site">

    </TextView>
</LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="#32000000">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_4sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:src="@drawable/location">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:text="nabapally barasat kolkata 700126"
                        android:textColor="#1E3F6C"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/lltop"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_5sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.17"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rectangular_rounded_shape_fix_fault"
                android:textSize="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/edit_site"></ImageView>

                <TextView
                    android:id="@+id/tv_remove"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_toRightOf="@+id/img_fixfault"
                    android:gravity="center"
                    android:text="EDIT"
                    android:textSize="@dimen/_10sdp">

                </TextView>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/rectangular_rounded_shape_move_trash">

                <ImageView
                    android:id="@+id/imgtrash"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/fault_trash"></ImageView>

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_toRightOf="@+id/imgtrash"
                    android:gravity="center_vertical"
                    android:text="DELETE"
                    android:textColor="#fff"
                    android:textSize="@dimen/_10sdp">

                </TextView>


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>