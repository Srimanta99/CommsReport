<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_unlimited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paymentbg"
        android:padding="@dimen/_20sdp">
        <TextView
            android:id="@+id/tv_unlimited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:textColor="#0417ab"
            android:text="Unlimited"></TextView>
        <CheckBox
            android:id="@+id/chk_unlimited_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/customcheckboxselectorpayment"
            ></CheckBox>
        <TextView
            android:id="@+id/tv_unlimited_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chk_unlimited_select"
            android:text=" Unlimited users "
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/rectangular_rounded_shape_use_site"></TextView>
        <TextView
            android:id="@+id/tv_unlimited_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlimited"
            android:text=" Unlimited Sites "
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_11sdp"
            android:layout_toRightOf="@+id/tv_unlimited_user"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/rectangular_rounded_shape_use_site"></TextView>

        <TextView
            android:id="@+id/tvtengbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlimited_site"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="10 GBP/"
            android:textColor="#0d0d0d"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_17sdp"></TextView>
        <TextView
            android:id="@+id/tvtengbppermonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlimited_site"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_toRightOf="@+id/tvtengbp"
            android:text=" per month"
            android:textColor="@color/usertextcolor"

            android:textSize="@dimen/_12sdp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_below="@+id/tvtengbp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rectangular_rounded_shape_fault_doc">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_7sdp"
                android:background="@drawable/paymen_tick"></ImageView>
            <TextView
                android:id="@+id/tv_unlimited_fault"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_7sdp"
                android:textSize="@dimen/_11sdp"
                android:text="Unlimited Faults"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_7sdp"
                android:background="@drawable/horizentaldivider"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/paymen_tick"></ImageView>
            <TextView
                android:id="@+id/tv_unlimited_documents"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_7sdp"
                android:textSize="@dimen/_11sdp"
                android:text="Unlimited Documents"></TextView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>