<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/_210sdp"
    android:layout_height="@dimen/_250sdp"
    android:background="@drawable/rectangular_shape_white_round_corner_lightgrey_broder">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       >
        <RelativeLayout
            android:id="@+id/rl_popupheader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
           >
            <TextView
                android:id="@+id/tv_dialogtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/homehearbg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:text="SELECT SITE"
                android:textAllCaps="true" />
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/tv_dialogtitle"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:textSize="@dimen/_10sdp"
                android:hint="Search here"
                android:paddingLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/searchindialog"
                android:drawablePadding="@dimen/_7sdp"
                android:background="@drawable/rectangular_shape_rounded_corner_light_grey"/>

        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_below="@+id/rl_popupheader">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>

</RelativeLayout>