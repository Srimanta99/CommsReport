<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">
    <RelativeLayout
        android:id="@+id/rlheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        >
        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/menu"/>
        <TextView
            android:id="@+id/tv_header_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Report fault"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_two_rounded_corner_white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_selectsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_selectsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Select site"
                        android:textColor="#1E3F6C"
                        android:textSize="@dimen/_12sdp"
                        >

                    </TextView>



                    <TextView
                        android:id="@+id/tv_selectedsite"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"

                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/asscolor_round"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_9sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:drawableRight="@drawable/down_arrow"

                        android:hint="Please select site"
                        >

                    </TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvadd_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Add note"
                    android:drawableRight="@drawable/star"
                    android:drawablePadding="@dimen/_4sdp"
                    android:textColor="#1E3F6C"
                    android:textSize="@dimen/_12sdp">

                </TextView>




                <EditText
                    android:id="@+id/et_addnote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/asscolor_round"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:minLines="5"
                    android:paddingLeft="@dimen/_9sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/_12sdp"
                    >

                </EditText>
                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"

                    android:textColor="#1E3F6C"></TextView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp">

                    <RelativeLayout
                        android:id="@+id/rl_img_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/sky_bg"

                        android:orientation="vertical">



                        <ImageView
                            android:id="@+id/img_fault1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_4sdp"
                            android:visibility="invisible"
                            android:src="@drawable/camera">

                        </ImageView>
                        <ImageView
                            android:id="@+id/img_camera1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:src="@drawable/camera">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_img1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="CILCK HERE\n TO ADD IMAGE"
                            android:textColor="#1BB8F9"
                            android:textSize="@dimen/_10sdp"
                            android:layout_below="@+id/img_camera1"
                            android:textStyle="bold">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_img2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/sky_bg"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fault2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_4sdp"
                            android:visibility="invisible"
                            android:src="@drawable/camera">

                        </ImageView>

                        <ImageView
                            android:id="@+id/img_camera2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/camera">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_img2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="CILCK HERE\n TO ADD IMAGE"
                            android:textColor="#1BB8F9"
                            android:textSize="@dimen/_10sdp"
                            android:layout_below="@+id/img_camera2"
                            android:textStyle="bold">

                        </TextView>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <RelativeLayout
                        android:id="@+id/rl_img_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_weight="0.5"

                        android:background="@drawable/sky_bg"
                        android:orientation="vertical">



                        <ImageView
                            android:id="@+id/img_fault3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_4sdp"
                            android:visibility="invisible"
                            android:src="@drawable/camera">

                        </ImageView>
                        <ImageView
                            android:id="@+id/img_camera3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:src="@drawable/camera">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_img3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="CILCK HERE\n TO ADD IMAGE"
                            android:textColor="#1BB8F9"
                            android:textSize="@dimen/_10sdp"
                            android:layout_below="@+id/img_camera3"
                            android:textStyle="bold">

                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_img4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"

                        android:background="@drawable/sky_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_fault4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:layout_margin="@dimen/_4sdp"
                            android:visibility="invisible"
                            android:src="@drawable/camera">

                        </ImageView>

                        <ImageView
                            android:id="@+id/img_camera4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/camera">

                        </ImageView>

                        <TextView
                            android:id="@+id/tv_img4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="CILCK HERE\n TO ADD IMAGE"
                            android:textColor="#1BB8F9"
                            android:textSize="@dimen/_10sdp"
                            android:layout_below="@+id/img_camera4"
                            android:textStyle="bold">

                        </TextView>


                    </RelativeLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_15sdp">
                    <TextView
                        android:id="@+id/tv_notify"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/email"
                        android:padding="@dimen/_10sdp"
                        android:text="NOTIFY WHO"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:background="@drawable/rectangular_shape_rounded_corner_skyblue"
                        ></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:gravity="bottom">


                    <TextView
                        android:id="@+id/tv_mendatory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_52sdp"
                        android:gravity="center"
                        android:text="Note: [*] feilds are all mandatory fields"></TextView>

                    <TextView
                        android:id="@+id/tv_addfault"
                        android:layout_width="@dimen/_175sdp"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="ADD FAULT"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/gradient_login_button"
                        android:textStyle="bold">

                    </TextView>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>