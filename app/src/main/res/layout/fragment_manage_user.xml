<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.fragments.manageuser.ManageUserFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_65sdp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_manage_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            tools:itemCount="10"
            tools:listitem="@layout/item_manage_user"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            ></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_add_user"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/gradient_login_button"
        android:text="ADD USER"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_alignParentBottom="true"></TextView>


</RelativeLayout>