<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".screens.forgotpassword.ForgotPasswordActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/logo"></ImageView>
    <TextView
        android:id="@+id/tv_forgotpasswordheaderr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_75sdp"
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/_20sdp"
        android:text="@string/forgotHeader"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintRight_toRightOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Please Check your email \n for your new password"
        android:textSize="@dimen/_13sdp"
        android:gravity="center"
        android:textColor="@color/email_color"
        app:layout_constraintTop_toBottomOf="@id/tv_forgotpasswordheaderr"></TextView>

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/tvemail"

        android:layout_marginTop="@dimen/_15sdp"

        android:background="@drawable/rectangular_shape_rounded_corner_login"

        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_12sdp"
        android:textSize="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:hint="Enter your email"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotpassword"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_47sdp"

        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/etemail"
        android:background="@drawable/gradient_login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>