<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:id="@+id/rl_faultcount"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="@dimen/_200sdp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/_30sdp"
    android:background="@drawable/circle">
    <TextView
        android:id="@+id/tvfaultcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:textColor="@color/text_red"
        android:textSize="@dimen/_60sdp"
        android:text="20"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="FAULTS \n REPORTED"
        android:gravity="center"
        android:textSize="@dimen/_17sdp"
        android:layout_below="@+id/tvfaultcount"></TextView>

</RelativeLayout>
    <Button
        android:id="@+id/btn_reportfault"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_44sdp"

        android:layout_marginTop="@dimen/_25sdp"
        android:layout_below="@+id/rl_faultcount"
        android:background="@drawable/gradient_login_button"
        android:text="REPORT A FAULT"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />
    <Button
        android:id="@+id/btn_uploadDocument"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_44sdp"

        android:layout_marginTop="@dimen/_25sdp"
        android:layout_below="@+id/btn_reportfault"
       android:background="@drawable/gradient_skyblue_button"
        android:text="UPLOAD DOCUMENT"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />
</RelativeLayout>